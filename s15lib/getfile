from glob import glob
from pathlib import Path
import os

def getfiles(path= "./gdrive/My Drive/"):
    files_list = []
    for b in range(1,39):
    
        files_list.extend(glob(os.path.join(path+str(b), '*.jpg')))
        files_list.extend(glob(os.path.join(path+str(b), '*.jpeg')))
    print("Total No of image is:  " + str(len(files_list)))
    return files_list
